<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Tree Lights API</Title>
    <Authors>JulesWhite</Authors>
    <Company>Friends-Robotics</Company>
    <Description>An API to communicate with a Tree-Lights server.</Description>
    <PackageProjectUrl>https://github.com/Friends-Robotics/Tree-Lights</PackageProjectUrl>
    <PackageLicenseExpression>GPL-3.0-only</PackageLicenseExpression>
    <PackageId>FriendsRobotics.TreeAPI</PackageId>
    <Product>Friends' Robotics TreeAPI</Product>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Friends;FriendsRobotics;Tree</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\..\Desktop\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="WebSocketSharp-netstandard" Version="1.0.1" />
  </ItemGroup>

</Project>
